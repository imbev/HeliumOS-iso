#!/usr/bin/env bash


apt-get update

passwd -d user

cat > /home/user/.config/powermanagementprofilesrc << EOF
[AC]
icon=battery-charging

[Battery]
icon=battery-060

[LowBattery]
icon=battery-low
EOF

cat > /home/user/.config/kscreenlockerrc << EOF
[Daemon]
Autolock=false
LockOnResume=false
EOF

rm -f /home/user/.config/plasma-org.kde.plasma.desktop-appletsrc

cp -r /etc/skel/* /home/user/
